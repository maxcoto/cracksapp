<% unless @locations.empty? %>
	<% @locations.each do |location| %>
    <div class='call-tag'>
      <div class='call-kind'><img src='/assets/location.png' /></div>
      
      <div class='call-left'>
        <div class='location-name'><%= friendly_date(location.date) %></div>
        <div class='location-button'>
          <a class='button' href="<%= location_url(location) %>" target='_blank'>Open in Google Maps</a>
        </div>
      </div>
    </div>
	<% end %>
<% else %>
	<div class="empty-data">No Data</div>
<% end %>
